<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/trackerFragment">

    <fragment
        android:id="@+id/trackerFragment"
        android:name="com.example.sot_treasure_tracker.calculator.presentation.TrackerFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_tracker" >
        <action
            android:id="@+id/action_trackerFragment_to_presetsFragment"
            app:destination="@id/presetsFragment" />
        <argument
            android:name="treasureIds"
            app:argType="integer[]"
            app:nullable="true" />
        <argument
            android:name="treasureQuantities"
            app:argType="integer[]"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/presetsFragment"
        android:name="com.example.sot_treasure_tracker.presets.presentation.PresetsFragment"
        android:label="Presets"
        tools:layout="@layout/fragment_presets" >
        <action
            android:id="@+id/action_presetsFragment_to_trackerFragment"
            app:destination="@id/trackerFragment"
            app:popUpTo="@id/trackerFragment" />
    </fragment>
</navigation>